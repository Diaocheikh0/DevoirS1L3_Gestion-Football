<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cat√©gories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div>
    <a href="index.php?controller=interface" class="btn btn-warning btn-sm">Acceuil</a>
</div>
<div class="container">
    <h2 class="text-center">Liste des Joueurs</h2>
    <a href="?controller=joueur&&action=add" class="btn btn-primary">Ajout Joueur</a>
    <table class="table table-bordered border-primary text-center mt-4">
        <tr class="bg-primary">
            <th>ID</th>
            <th>NOM</th>
            <th>PRENOM</th>
            <th>AGE</th>
            <th>EQUIPE</th>
            <td colspan="2">ACTIONS</td>
        </tr>
        {% for a in joueurs %}
            <tr>
                <td>{{ a.getId() }}</td>
                <td>{{ a.getNom() }}</td>
                <td>{{ a.getPrenom() }}</td>
                <td>{{ a.getAge() }}</td>
                <td>{{ a.getEquipe().getLibelle() }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="?controller=joueur&&action=edit&id={{ a.getId() }}">Edit</a>
                    <a class="btn btn-danger btn-sm" href="?controller=joueur&&action=delete&id={{ a.getId()}}">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>